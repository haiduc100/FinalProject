    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <!-- Button trigger modal -->
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Assign To</th>
                <th scope="col">Assign By</th>
                <th scope="col">Asset Code</th>
                <th scope="col">Note</th>
                <th scope="col">Is Returning</th>
                <th scope="col">Transfer</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% listAssignment.map((value,index)=>{ %>
              <tr>
                <td scope="row"><%= index + 1 %></td>
                <td><%= value.AssignToId.StaffCode %></td>
                <td>
                  <%= value.AssignById ? value.AssignById.StaffCode : null %>
                </td>
                <td><%= value.AssetId.AssetCode %></td>
                <td><%= value.Note %></td>
                <td><%= value.IsReturning %></td>
                <td><%= value.TransferringId %></td>
                <td>
                  <p
                    data-toggle="modal"
                    data-target="#exampleModal"
                    class="btn btn-warning"
                    onclick="openUpdate('<%= value._id %>')"
                  >
                    Return
                  </p>
              
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <div class="paginateBtn">
          <%for (let i = 0; i <totalPages; i++){ %>
            <a href="/assignments?page=<%= i+1 %>&pageSize=5" class="mr-2"><button><%=i+1%></button></a>
          <%} %>
        </div>
