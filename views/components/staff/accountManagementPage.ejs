<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Account</title>
    <link rel="icon" href="/public/img/icon/icon.jpg" type="image/icon type" />
    <link
      rel="stylesheet"
      href="/public/css/admin-requestBorrowManagementPage.css"
    />
  </head>
  <body>
    <%- include("./sidebar.ejs") %>

    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"
            ><i class="fas fa-bars"></i
          ></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="#" class="nav-link">Home</a>
        </li>
      </ul>
    </nav>

    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel"></h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="col update">
                    <div class="form-group">
                      <label for="StaffCode">Staff Code</label>
                      <input
                        type="text"
                        class="StaffCode form-control"
                        readonly
                      />
                      <div class="form-group">
                        <label for="Department">Department</label>
                        <input
                          type="text"
                          class="Department form-control"
                          readonly
                        />
                      </div>
                    </div>
                    <div class="form-group">
                      <label for="">Date of birth</label>
                      <input
                        type="date"
                        name="DateOfBirth"
                        placeholder="Date of birth"
                        class="DateOfBirth form-control"
                        required
                      />
                      <div id="warning_message" class="invalid-feedback"></div>
                    </div>
                    <div class="form-group">
                      <label for="FirstName">First Name</label>
                      <input type="text" class="FirstName form-control" />
                    </div>
                    <div class="form-group">
                      <label for="LastName">Last Name</label>
                      <input type="text" class="LastName form-control" />
                    </div>
                    <div class="form-group">
                      <label for="UserName">User Name</label>
                      <input type="text" class="UserName form-control" />
                    </div>
                  </div>
                  <div class="col changePass">
                    <div class="form-group">
                      <label for="oldPassword">Old Password</label>
                      <input type="password" class="oldPassword form-control" />
                    </div>
                    <div class="form-group">
                      <label for="newPassword">New Password</label>
                      <input type="password" class="newPassword form-control" />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary updatebtn"
                    onclick="handleUpdate()"
                  >
                    Update
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary changebtn"
                    onclick="handleChangePass()"
                  >
                    Change
                  </button>
                </div>
              </div>
            </div>
          </div>
          <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-12">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Staff Code</th>
                        <th scope="col">Date Of Birth</th>
                        <th scope="col">Gender</th>
                        <th scope="col">Department</th>
                        <th scope="col">User Name</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% data.map((value,index)=>{ %>
                      <tr>
                        <td scope="row"><%= index + 1 %></td>
                        <td><%= value.StaffCode %></td>
                        <td>
                          <%= value.DateOfBirth.toLocaleDateString('en-GB') %>
                        </td>
                        <td><%= value.Gender%></td>
                        <td><%= value.Department.DepartmentName %></td>
                        <td><%= value.UserName %></td>
                        <td>
                          <p
                            data-toggle="modal"
                            data-target="#exampleModal"
                            class="btn btn-warning"
                            id="btnUpdate"
                            onclick="openUpdate('<%= value._id %>')"
                          >
                            Update
                          </p>
                          <p
                            data-toggle="modal"
                            data-target="#exampleModal"
                            class="btn btn-success"
                            id="btnUpdate"
                            onclick="openChangePass('<%= value._id %>')"
                          >
                            Change password
                          </p>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <!-- <div class="paginateBtn" id="">
              <% for(let i = 0; i <totalPages; i++) { %>
                <a href="/staff/account?page=<%= i+1 %>&pageSize=5" class="mr-2"><button> <%= i+1 %> </button></a>
              <% }%>
            </div> -->
          </section>
        </div>
      </section>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/public/js/admin-AccountPage.js"></script>
  </body>
</html>
