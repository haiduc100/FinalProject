<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/public/img/icon/icon.jpg" type="image/icon type" />
    <title>Asset Management</title>
    <link rel="stylesheet" href="/public/css/admin-PenaltyRuleManagementPage.css">

  </head>
  <body>
    <%- include("./sidebar.ejs") %>

    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
      <!-- Left navbar links -->
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" data-widget="pushmenu" href="#" role="button"
            ><i class="fas fa-bars"></i
          ></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
          <a href="#" class="nav-link">Home</a>
        </li>
      </ul>

      <!-- Right navbar links -->
      <ul class="navbar-nav ml-auto">
        <!-- Navbar Search -->
        <li class="nav-item">
          <a
            class="nav-link"
            data-widget="navbar-search"
            href="#"
            role="button"
          >
            <i class="fas fa-search"></i>
          </a>
          <div class="navbar-search-block">
            <form class="form-inline">
              <div class="input-group input-group-sm">
                <input
                  class="form-control form-control-navbar searchBox"
                  type="search"
                  placeholder="Search"
                  aria-label="Search"
                />
                <div class="input-group-append">
                  <button
                    class="btn btn-navbar"
                    type="button"
                    onclick="handleSearch()"
                  >
                    <i class="fas fa-search"></i>
                  </button>
                  <button
                    class="btn btn-navbar"
                    type="button"
                    data-widget="navbar-search"
                  >
                    <i class="fas fa-times"></i>
                  </button>
                </div>
              </div>
            </form>
          </div>
        </li>
      </ul>
    </nav>
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">

          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <form action="">

                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Modal title
                  </h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <!-- <div class="createPenaltyRule">
                    <div class="form-group">

                      <label>Percent</label>
                      <input
                        type="text"
                        name="Percent"
                        id=""
                        placeholder="Percent"
                        class="Percent form-control" required
                      />
                    </div>
                    <div class="form-group">
                      <label for="">Amount</label>
                      <input
                      type="text"
                      name="Amount"
                      id=""
                      placeholder="Amount"
                      class="Amount form-control" required
                    />
                    </div>
                  </div> -->

                  <div class="updatePenaltyRule">
                    <div class="form-group">
                      <label for="">Staff Code</label>
                      <input
                        type="text"
                        name="StaffCodeUpdate"
                        id=""
                        placeholder="Staff Code"
                        class="StaffCodeUpdate form-control" readonly
                      />
                    </div>
                    <div class="form-group">
                      <label for="">Old Quality</label>

                      <input
                      type="text"
                      name="OldQualityUpdate"
                      id=""
                      placeholder="Old Quality"
                      class="OldQualityUpdate form-control" readonly
                    />
                    </div>
                    <div class="form-group">
                      <label for="">New Quality</label>

                      <input
                      type="text"
                      name="NewQualityUpdate"
                      id=""
                      placeholder="New Quality"
                      class="NewQualityUpdate form-control" readonly
                    />
                    </div>
                    <div class="form-group">
                      <label for="">Is Fines</label>
                    <select name="" id=""   class="IsFinesUpdate form-control" required>
                      <option value="">--Select--</option>
                      <option value=true>Yes</option>
                      <option value=false>No</option>
                    </select>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="submit"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    type="submit"
                    class="btn btn-primary addbtn"
                    onclick="handleAddNew()"
                  >
                    Add
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary updatebtn"
                    onclick="handleUpdate()"
                  >
                    Update
                  </button>
                </div>
              </form>

              </div>
            </div>
          </div>

          <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-12">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Staff Code</th>
                        <th scope="col">Old Quality (%)</th>
                        <th scope="col">New Quality (%)</th>
                        <th scope="col">Amount</th>
                        <th scope="col">Percent (%)</th>
                        <th scope="col">Is Fines</th>
                        <th scope="col">Deadline</th>
                        <!-- <th scope="col">Action</th> -->
                      </tr>
                    </thead>
                    <tbody>
                      <% listPenaltys.map((value,index)=>{ %>
                      <tr>
                        <td scope="row"><%= index + 1 %></td>
                        <td><%= value.UserId.StaffCode %></td>
                        <td><%= value.OldQuality %> </td>
                        <td><%= value.NewQuality %> </td>
                        <td><%= value.Amount %></td>
                        <td><%= value.Percent %> </td>
                        <td><%= value.IsFines %></td>
                        <td><%= value.Deadline.toLocaleDateString('en-GB') %></td>
                       
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
            <div class="paginateBtn" id="">
              <% for(let i = 0; i <totalPages; i++) { %>
                <a href="/PenaltyRule?page=<%= i+1 %>&pageSize=5" class="mr-2"><button> <%= i+1 %> </button></a>
              <% }%>
            </div>
          </section>
        </div>
      </section>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <!-- <script src="/public/js/admin-PenaltyBillPage.js"></script> -->
  </body>
</html>
