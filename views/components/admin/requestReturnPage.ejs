<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Request Returning</title>
  </head>
  <body>
    <%- include("./sidebar.ejs") %>

    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Modal title
                  </h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="updateAsset">
                    <label for="StateUpdate">State</label>
                    <select name="StateUpdate" id="" class="StateUpdate">
                      <option value="completed">Completed</option>
                      <option value="declined">Declined</option>
                    </select>
                    <br />
                    <label for="AccecptByUpdate">Accecpt By</label>

                    <select
                      name="AccecptByUpdate"
                      id=""
                      class="AccecptByUpdate"
                    >
                      <% listUsers.map((value)=>{%>
                      <option value="<%= value._id %>">
                        <%= value.StaffCode %>
                      </option>
                      <% })%>
                    </select>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary updatebtn"
                    onclick="handleUpdate()"
                  >
                    Update
                  </button>
                </div>
              </div>
            </div>
          </div>
          <button onclick="handleExport()" class="btn btn-primary" >Export</button>
          <section class="content">
            <div class="container-fluid">
              <div class="row">
                <div class="col-12">
                  <table class="table">
                    <thead>
                      <tr>
                        <th scope="col">#</th>
                        <th scope="col">Request By</th>
                        <th scope="col">State</th>
                        <th scope="col">Accepted By</th>
                        <th scope="col">Action</th>
                      </tr>
                    </thead>
                    <tbody>
                      <% listRequestReturning.map((value,index)=>{ %>
                      <tr>
                        <td scope="row"><%= index + 1 %></td>
                        <td><%= value.RequestBy.StaffCode %></td>
                        <td><%= value.State %></td>
                        <td>
                          <%= value.AccecptBy ? value.AccecptBy.StaffCode : null
                          %>
                        </td>
                        <td>
                          <p
                            data-toggle="modal"
                            data-target="#exampleModal"
                            class="btn btn-warning"
                            onclick="openUpdate('<%= value._id %>')"
                          >
                            Update
                          </p>
                        </td>
                      </tr>
                      <% }) %>
                    </tbody>
                  </table>
                </div>
              </div>
            </div>
          </section>
        </div>
      </section>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/public/js/admin-RequestReturnPage.js"></script>
  </body>
</html>
