<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Asset Management</title>
  </head>
  <body>
    <%- include("./sidebar.ejs") %>

    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <!-- Button trigger modal -->
          <button
            type="button"
            class="btn btn-primary"
            data-toggle="modal"
            data-target="#exampleModal"
          >
            Add New Asset
          </button>

          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Modal title
                  </h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body d-flex flex-column">
                  <input
                    type="text"
                    name="AssetName"
                    id=""
                    placeholder="AssetName"
                    class="AssetName"
                  />

                  <select name="Category" id="" class="Category">
                    <% listCategory.map((value)=>{%>
                    <option value="<%= value._id %>">
                      <%= value.CategoryName %>
                    </option>
                    <% })%>
                  </select>
                  <input
                    type="number"
                    name="AssetDate"
                    placeholder="AssetDate"
                    class="AssetDate"
                  />
                </div>
                <div class="modal-footer">
                  <button
                    type="button"
                    class="btn btn-secondary"
                    data-dismiss="modal"
                  >
                    Close
                  </button>
                  <button
                    type="button"
                    class="btn btn-primary"
                    onclick="handleAddNew()"
                  >
                    Add New
                  </button>
                </div>
              </div>
            </div>
          </div>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Asset Name</th>
                <th scope="col">Category</th>
                <th scope="col">Asset Date</th>
                <th scope="col">Created Date</th>
                <th scope="col">State</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% listAssets.map((value,index)=>{ %>
              <tr>
                <td scope="row"><%= index + 1 %></td>
                <td><%= value.AssetName %></td>
                <td><%= value.Category.CategoryName %></td>
                <td><%= value.AssetDate %></td>
                <td><%= value.CreatedDate.toLocaleDateString() %></td>
                <td><%= value.State %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
    <script
      src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"
      integrity="sha512-894YE6QWD5I59HgZOGReFYm4dnWc1Qt5NtvYSaNcOP+u1T9qYdvdihz0PPSiiqn/+/3e7Jo4EaG7TubfWGUrMQ=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    ></script>
    <script src="/public/js/admin-homeAssetPage.js"></script>
  </body>
</html>
