<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Assignment Management</title>
  </head>
  <body>
    <%- include("./sidebar.ejs") %>

    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <section class="content-header">
        <div class="container-fluid">
          <button class="btn btn-success">Add New</button>
          <table class="table">
            <thead>
              <tr>
                <th scope="col">#</th>
                <th scope="col">Assign To</th>
                <th scope="col">Assign By</th>
                <th scope="col">Asset Name</th>
                <th scope="col">Asset Date</th>
                <th scope="col">State</th>
                <th scope="col">Note</th>
                <th scope="col">Is Returning</th>
                <th scope="col">TransferringId</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% listAssignment.map((value,index)=>{ %>
              <tr>
                <td scope="row"><%= index + 1 %></td>
                <td><%= value.AssignToId.UserName %></td>
                <td><%= value.AssignById.UserName %></td>
                <td><%= value.AssetId.AssetName %></td>
                <td><%= value.State %></td>
                <td><%= value.Note %></td>
                <td><%= value.IsReturning %></td>
                <td><%= value.Note %></td>
                <td><%= value.TransferringId %></td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </section>
    </div>
  </body>
</html>
