          <!-- Modal -->
          <div
            class="modal fade"
            id="exampleModal"
            tabindex="-1"
            role="dialog"
            aria-labelledby="exampleModalLabel"
            aria-hidden="true"
          >
            <div class="modal-dialog" role="document">
              <div class="modal-content">
                <form action="">

                <div class="modal-header">
                  <h5 class="modal-title" id="exampleModalLabel">
                    Modal title
                  </h5>
                  <button
                    type="button"
                    class="close"
                    data-dismiss="modal"
                    aria-label="Close"
                  >
                    <span aria-hidden="true">&times;</span>
                  </button>
                </div>
                <div class="modal-body">
                  <div class="createAssignment">
                    <div class="form-group">
                      <label for="">Assign To</label>
                      <select name="AssignTo" id="" class="AssignTo form-control" required>
                        <option value="">--Select--</option>
                        <% listUser.map((value)=>{%>
                        <option value="<%= value._id %>">
                          <%= value.StaffCode %>
                        </option>
                        <% })%>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for=""> Asset Code</label>
                      <select name="AssetName" id="" class="AssetName form-control" required>
                        <option value="">--Select--</option>
                        <% listAsset.map((value)=>{%>
                        <option value="<%= value._id %>">
                          <%= value.AssetCode %>
                        </option>
                        <% })%>
                      </select>
                    </div>
                    <div class="form-group">
                      <label for="">Note</label>
                      <input
                        type="text"
                        name="Note"
                        id=""
                        placeholder="Note"
                        class="Note form-control" required
                      />
                    </div>
                  </div>

                  <div class="updateAssignment">
                    <!-- <div class="form-group">
                      <label for="">Assign To</label>
                      <% listUser.map((value)=>{%>
                          <input value="<%= value.StaffCode %>"  type="text" name="" id="" class="AssignToUpdate form-control" readonly>
                        <% })%>
                    </div> -->
                   <div class="form-group">
                    <label for="">Asset Code</label>
                    <select name="AssetName" id="" class="AssetNameUpdate form-control" required disabled>
                      <% listAsset.map((value)=>{%>
                      <option value="<%= value._id %>">
                        <%= value.AssetCode %>
                      </option>
                      <% })%>
                    </select>
                   </div>
                    <div class="form-group">
                      <label for="">Note</label>
                      <input
                        type="text"
                        name="Note"
                        id=""
                        placeholder="Note"
                        class="NoteUpdate form-control" required
                      />
                    </div>
